#!/bin/bash
PWD=`pwd`
echo install dotfiles.
for file in *rc vim ; do
  if [ -e ~/.$file ]; then
    echo "~/.$file is exist"
  else
    ln -vs $PWD/$file ~/.$file 
  fi
done

GITIGNORE=~/.gitignore

git config --global core.excludesfile $GITIGNORE
tags_cnt=`grep -c "doc/tags"  $GITIGNORE`
if [ $tags_cnt -eq 0 ]; then
  echo doc/tags    >> $GITIGNORE
  echo doc/tags-ja >> $GITIGNORE
fi

